<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="?attr/actionBarSize"
    android:id="@+id/messages_fragment"
    tools:context=".ui.messages.MessagesFragment" >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="3dp"
        android:paddingRight="3dp">


        <Button
            android:id="@+id/ask_question_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ask_question_button" />

        <Button
            android:id="@+id/ask_question_general_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ask_question_general_button" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messages_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>